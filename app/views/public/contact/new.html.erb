<h3 class="title">お問い合わせ</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col"></div>
    <%= form_with model: @contact, url: contact_confirm_path, local: true do |f| %>
    <div class="text-danger"><%= render 'layouts/errors', obj:@contact %></div>
    <table class="table">
      <tr>
        <th>名前<span class="text-danger">（必須）</span></th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
      <tr>
        <td><%= link_to "履歴", contact_index_path, class: 'btn btn-success' %></td>
        <td><%= f.submit '確認', class: 'btn btn-primary' %></td>
      </tr>
    </table>
    <% end %>
    <div class="col"></div>
  </div>
</div>
