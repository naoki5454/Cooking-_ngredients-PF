<h3>プロフィール編集</h3>

  <%= form_with model: @customer, local:true do |f| %>
  <label>プロフィール画像</label>
  <%= f.file_field :customer_image, placeholder: "プロフィール画像" %>
  <label>ニックネーム</label>
  <%= f.text_field :nickname, autofocus: true, placeholder:"ニックネーム"%>
  <label>自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, placeholder:"自己紹介文"%>

  <%= f.submit '保存', class: 'btn btn-success px-4' %>
  <% end %>

  <%= link_to "退会", destroy_confirm_path(@customer), class: 'btn btn-success px-4' %>