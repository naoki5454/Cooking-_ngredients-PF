<h3 class="title">マイページ</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-2">
      <div>
        <%= attachment_image_tag @customer, :customer_image, :fill, 100, 100, format: 'jpeg', class: 'maru' %>
      </div>
      <div class="text-box">
        　<p><%= @customer.nickname %></p>
          <p><%= simple_format(@customer.introduction) %></p>
      </div>
      <div>
        <%= link_to "編集", edit_customer_path, class: 'btn btn-success	' %>
        <%= link_to "料理の投稿", new_cuisine_path, class: 'btn btn-primary' %>
      </div>
      <%= render 'public/genres/index', genres: @genres %>
    </div>
    <div class="col-1"></div>
    <div class="col">
      <table class="mt-3 table">
        <% @cuisines.each do |cuisine| %>
        <tr height="120px">
          <td>
            <%= attachment_image_tag cuisine, :cuisine_image, :fill, 100, 100, format: 'jpeg' %>
          </td>
          <td width="120px">
            <%= link_to cuisine_path(cuisine) do %>
            <%= cuisine.cuisine_name %>
            <% end %>
          </td>
          <td><%= cuisine.time %>分</td>
        </tr>
        <% end %>
      </table>
      <%= paginate @cuisines %>
    </div>
    <div class="col"></div>
  </div>
</div>