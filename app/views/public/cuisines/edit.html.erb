<h3><%= @cuisine.cuisine_name %>の編集</h3>

<div>
  <div>
    <%= form_with model: @cuisine, local:true do |f| %>
    <label>料理画像</label>
    <%= f.file_field :cuisine_image_id, placeholder: "料理画像" %>
    <label>料理名</label>
    <%= f.text_field :cuisine_name, autofocus: true, placeholder:"料理名"%>
    <label>ジャンル</label>
    <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name,  {prompt: "--選択してください--"}) %>
    <label>調理時間</label>
    <%= f.text_field :time, autofocus: true, placeholder:"調理時間"%>分
    <label>説明</label>
    <%= f.text_field :introduction, autofocus: true, placeholder:"説明"%>

    <%= f.submit '保存', class: 'btn btn-success px-4' %>
    <% end %>
  </div>
</div>