<h3><%= @cuisine.cuisine_name %>の編集</h3>

<div>
  <div>
    <%= form_with model: @cuisine, local:true do |f| %>
    <label>料理画像</label>
    <%= f.file_field :cuisine_image %>
    <label>料理名</label>
    <%= f.text_field :cuisine_name, autofocus: true, placeholder:"親子丼"%>
    <label>ジャンル</label>
    <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name,  {prompt: "--選択してください--"}) %>
    <label>調理時間</label>
    <%= f.text_field :time, autofocus: true, placeholder:"10" %>分
    <div><%= f.label "材料" %></div>
    <%= f.text_area :material_introduction, placeholder: "かいわれ=>ひとつかみなど", autofocus: true %>
    <label>説明</label>
    <%= f.text_area :introduction, autofocus: true, placeholder:"工程など" %>

    <%= f.submit '保存', class: 'btn btn-success px-4' %>
    <% end %>
  </div>
</div>