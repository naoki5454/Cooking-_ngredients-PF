<h3>料理投稿ページ</h3>
<div>
  <div>
    <%= form_with model: @cuisine, url: cuisines_path, metod: :post, local:true do |f| %>
    <div>
      <%= f.file_field :cuisine_image_id %>
    </div>
    <div>
      <%= f.label "ジャンル" %>
    </div>
    <div>
      <%= f.collection_select(:genre_id, Genre.all, :id, :genre_name,  {prompt: "--選択してください--"}) %>
      </div>
      <div>
      <%= f.label "料理名" %>
    </div>
    <div>
      <%= f.text_field :cuisine_name, autofocus: true %>
    </div>
    <div>
      <%= f.label "調理時間" %>
    </div>
    <div>
      <%= f.text_field :time, autofocus: true %>分
    </div>
    <div>
      <%= f.label "材料" %>
    </div>
    <div>
      <%= f.text_area :material_introduction, autofocus: true %>
    </div>
    <div>
      <%= f.label "説明" %>
    </div>
    <div>
      <%= f.text_area :introduction, autofocus: true %>
    </div>
    <div>
      <%= f.submit '投稿', class: 'btn btn-success px-4' %>
    </div>
      <% end %>
    </div>
  </div>
</div>