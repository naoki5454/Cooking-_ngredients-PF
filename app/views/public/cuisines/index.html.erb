<h3>料理一覧</h3>
<table>
  <% @cuisines.each do |cuisine| %>
    <tr>
      <td>
        <%= attachment_image_tag cuisine, :cuisine_image_id, :fill, 100, 100, format: 'jpeg' %>
      </td>
      <td>
        <%= link_to cuisine_path(cuisine) do %>
        <%= cuisine.cuisine_name %>
        <% end %>
      </td>
      <td>
        <%= cuisine.time %>分
      </td>
      <td>
        <% if cuisine.favorited_by?(current_customer) %>
          <%= link_to cuisine.cuisine_favorites.count, cuisine_cuisine_favorites_path(cuisine), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
        <% else %>
          <%= link_to cuisine.cuisine_favorites.count, cuisine_cuisine_favorites_path(cuisine), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
        <% end %>
      </td>
      <td>コメント件数：<%= cuisine.cuisine_comments.count %></td>
    </tr>
    <% end %>
</table>
<%= paginate @cuisines %>
<table>
  <% @genres.each do |genre| %>
  <tr>
    <td>
      <%= link_to genre_path(genre) do %>
      <%= genre.genre_name %>
      <% end %>
    </td>
  </tr>
   <% end %>
</table>
