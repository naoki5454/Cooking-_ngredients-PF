<h2 class="title">ログイン</h2>
 <div class="container-fluid">
   <div class="row">
    <div class="col"></div>
    <%= render "customers/shared/error_messages", resource: resource %>
    <%= form_with model: @customer, url: customer_session_path, local:true do |f| %>
    <div class="text-danger"><%= render 'layouts/errors', obj:@customer %></div>
    <table class="table table-borderless col" >
      <thead>
        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nickname, placeholder: "れいわ", autofocus: true %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email,placeholder: "sample@sampl.com", autofocus: true %></td>
        </tr>
        <tr>
          <td>パスワード（6文字以上）</td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td></td>
          <td>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>登録済みの方は<%= link_to "こちら", new_customer_registration_path %></td>
        </tr>
      </thead>
    </table>
    <% end %>
    <div class="col"></div>
  </div>
</div>
