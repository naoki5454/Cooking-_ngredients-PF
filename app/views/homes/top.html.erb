<div>
  <h3 class="title font">ようこそCooking ingredientsへ!!</h3>
</div>
<%= render 'homes/top' %>
<div class="container">
  <h1 class="mt-3 font">今日のごはん</h1>
  <div class="row mt-5">
    <% @cuisines.each do |cuisines| %>
    <div class="col-3">
      <div>
        <%= link_to cuisine_path(cuisines) do %>
        <%= attachment_image_tag cuisines, :cuisine_image, :fill, 200, 100, format: 'jpeg', class: 'maru' %>
        <% end %>
      </div>
      <div>
        <%= link_to cuisine_path(cuisines) do %>
        <%= cuisines.cuisine_name %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <p class="text-right mb-0"><%= link_to "全てのレシピを見る", cuisines_path %></p>
</div>