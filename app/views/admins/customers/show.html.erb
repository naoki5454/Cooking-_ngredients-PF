<h3><%= @customer.nickname %>の詳細</h3>

<div>
  <div>
    <table>
      <tr>
        <td>名前</td>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.k_name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <% if @customer.is_valid == true %>
        <th class="text-success">有効</th>
        <% else %>
        <th class="text-secondary">退会</th>
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集", edit_admins_customer_path(@customer) %></td>
      </tr>
    </table>
