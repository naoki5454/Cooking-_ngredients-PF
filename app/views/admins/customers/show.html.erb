<h3 class="text-center mt-5"><%= @customer.nickname %>さんの詳細</h3>
    <table align="center" class="mt-5">
      <tr>
        <td height="50">名前</td>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <td height="50">フリガナ</td>
        <td><%= @customer.k_name %></td>
      </tr>
      <tr>
        <td height="50">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td height="50">会員ステータス</td>
        <% if @customer.is_valid == true %>
        <th class="text-success">有効</th>
        <% else %>
        <th class="text-secondary">退会</th>
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集", edit_admins_customer_path(@customer) %></td>
      </tr>
    </table>
