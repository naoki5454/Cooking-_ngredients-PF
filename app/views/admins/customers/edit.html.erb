<h3><%= @customer.k_name %>の編集</h3>

<div>
  <div>
    <%= form_with model: @customer, url: admins_customer_path, local:true do |f| %>
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>名前</td>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :k_name, autofocus: true %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, autofocus: true %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <th>
          <%= f.radio_button :is_valid, :true %>
          <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_valid, :false, class: "ml-5" %>
          <%= f.label :is_valid, "退会", {value: :false, style: "display: inline-block;"} %>
        </th>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>