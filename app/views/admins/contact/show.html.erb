<h3 class="text-center mt-5"><%= @contact.name %>さんからのお問い合わせ内容</h3>
<div class="text-center mt-5">
  <h4><%= @contact.message %></h4>
  <%= form_with model: @contact, url: admins_contact_path, local:true do |f| %>
  <div class="mt-5">
    <%= f.radio_button :is_valid, :true %>
    <%= f.label :is_valid, "未対応", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :is_valid, :false, class: "ml-5" %>
    <%= f.label :is_valid, "対応済み", {value: :false, style: "display: inline-block;"} %>
  </div>
  <div class="mt-5"><%= f.submit "保存", class: "btn btn-success" %></div>
  <% end %>
</div>