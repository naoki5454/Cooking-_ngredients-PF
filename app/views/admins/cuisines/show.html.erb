<h3 class="text-center mt-5"><%= @cuisine.cuisine_name %>の詳細</h3>

<div class="container-fluid">
  <div class="row">
    <div class="col-4"></div>
    <table class="col">
      <tr>
        <td width="150px"><%= attachment_image_tag @cuisine, :cuisine_image, :fill, 100, 100, format: 'jpeg' %></td>
        <td width="150px"></td>
      </tr>
      <tr>
        <td>料理名</td>
        <td><%= @cuisine.cuisine_name %></td>
      </tr>
      <tr>
        <td><p>調理時間</p></td>
        <td><%= @cuisine.time %></td>
      </tr>
      <tr>
        <td><p>説明</p></td>
        <td class="overflow-wrap"><%= @cuisine.introduction %></td>
      </tr>
       <tr>
         <th><%= link_to "投稿削除", admins_cuisine_path(@cuisine), method: :delete, "date-confirm" => "本当に削除しますか？", class: 'btn btn-danger px-4' %></th>
       </tr>
    </table>
    <table class="col">
      <tr>
        <td><h3>ジャンル一覧</h3></td>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to edit_admins_genre_path(genre) do %>
          <%= genre.genre_name %>
          <% end %>
        </td>
      </tr>
       <% end %>
    </table>
    <div class="col"></div>
  </div>
</div>
